<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="fr.alainmuller.playingwithfragments.orientationfragments.MainActivity">

    <TextView
        android:id="@+id/et_main_hello"
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_main_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/btn_main_switch"
        android:layout_below="@id/et_main_hello"
        android:onClick="switchFragment"/>

    <View
        android:id="@+id/v_main_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/btn_main_switch"
        android:background="@android:color/black"
        android:layout_margin="10dp"
        />

    <FrameLayout
        android:id="@+id/fl_main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/v_main_separator"/>

</RelativeLayout>
